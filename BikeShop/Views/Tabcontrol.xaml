<Page x:Class="BikeShop.Views.Tabcontrol"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tabcontrol">

    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="tab1">
                <Grid Background="#FFE5E5E5">
                    <Button Content="야" HorizontalAlignment="Left" Margin="44,27,0,0" 
                            VerticalAlignment="Top" RenderTransformOrigin="0.467,0.671" 
                            Height="44" Width="96"/>
                </Grid>
            </TabItem>

            <TabItem Header="tab2">
                <Grid Background="#FFE5E5E5">
                    <Grid/>
                    <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,538,0"/>
                    <Calendar HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" Height="172" Width="227" RenderTransformOrigin="0.498,0.778"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
